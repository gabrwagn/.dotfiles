{
  "layer": "bottom",
  "position": "top",
  "height": 20,
  "modules-left": [
    "sway/workspaces",
    "sway/mode"
  ],
  "modules-center": [
    "custom/calendar"
  ],
  "modules-right": [
    "tray",
    "sway/language",
    "custom/bluetooth",
    "custom/memory",
    "pulseaudio",
    "network",
    "custom/battery",
    "clock"
  ],
  "sway/mode": {
    "format": " {}"
  },
  "sway/workspaces": {
    "format": "{name}",
    "disable-scroll": true
  },
  "sway/window": {
    "max-length": 40,
    "tooltip": false,
    "icon": false
  },
  "clock": {
    "format": " {:%H:%M}",
    "tooltip": "{:%A, %d %B %Y}",
    "on-click": "alacritty -e calcurse"
  },
  "network": {
    "format": "{icon}",
    "format-alt": "{ipaddr}/{cidr} {icon}",
    "format-alt-click": "click-right",
    "format-icons": {
      // "wifi": ["", "" ," "],
      "wifi": [
        "󰤟  ",
        "󰤢 ",
        "󰤥 ",
        " "
      ],
      "ethernet": [
        ""
      ],
      "disconnected": [
        "󰖪"
      ]
    },
    "on-click": "/home/gabwag/bin/networkmanager_dmenu",
    "tooltip": false
  },
  "pulseaudio": {
    "format": "{icon}",
    "format-alt": "{volume} {icon}",
    "format-alt-click": "click-middle",
    "format-muted": " ",
    "format-icons": {
      "phone": [
        " ",
        " ",
        "  "
      ],
      "headset": [
        " "
      ],
      "default": [
        " ",
        " ",
        " "
      ]
    },
    "scroll-step": 1,
    "on-click": "pavucontrol",
    "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "tooltip": false
  },
  "backlight": {
    "format": "{icon}",
    "format-alt": "{percent}% {icon}",
    "format-alt-click": "click-right",
    "format-icons": [
      "",
      ""
    ]
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "",
      "deactivated": ""
    },
    "tooltip": false
  },
  "custom/memory": {
    "exec": "~/.config/waybar/custom/memory.sh",
    "return-type": "json",
    "interval": 5,
    "on-click": "alacritty -e btop"
  },
  "custom/bluetooth": {
    "exec": "~/.config/waybar/custom/bluetooth.sh",
    "return-type": "json",
    "interval": 10,
    "on-click": "/home/gabwag/bin/rofi-bluetooth"
  },
  "custom/battery": {
    "exec": "~/.config/waybar/custom/battery.sh",
    "return-type": "json",
    "interval": 30
  },
  "custom/calendar": {
    "exec": "~/.config/waybar/custom/calendar.sh",
    "interval": 60,
    "on-click": "~/.config/waybar/custom/actions/calendar-open.sh"
  },
  "tray": {
    "icon-size": 18
  }
}
